<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
                     threshold="null" debug="null" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:schemaLocation="http://jakarta.apache.org/log4j/ ">

    <appender name="avatarAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/data/applogs/pinallia-common/logs/avatar.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[pinallia-common]%d %-5p [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="appAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <!-- <param name="Threshold" value="INFO" /> -->
        <param name="File" value="/data/applogs/pinallia-common/logs/app.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[pinallia-common]%d %-5p [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="ibatisAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/data/applogs/pinallia-common/logs/ibatis.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[pinallia-common]%d %-5p [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="illegalAccessAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/data/applogs/pinallia-common/logs/illegalAccess.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[pinallia-common]%d %-5p [%c] %m%n"/>
        </layout>
    </appender>


    <logger name="com.ibatis" additivity="false">
        <level value="WARN"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ibatisAppender"/>
    </logger>

    <logger name="java.sql">
        <level value="WARN"/>
    </logger>

    <logger name="org.springframework.jms">
        <level value="ERROR"/>
    </logger>

    <logger name="org.apache.activemq">
        <level value="ERROR"/>
    </logger>

    <logger name="org.apache.struts2">
        <level value="ERROR"/>
    </logger>

    <logger name="org.apache.struts2.dispatcher.Dispatcher" additivity="false">
        <level value="WARN"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="illegalAccessAppender"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="appAppender"/>
        <appender-ref ref="catAppender"/>
        <appender-ref ref="HAWK"/>
    </root>

</log4j:configuration>
